    deposit.asset.quantity === 400000.0
    deposit.asset.id.label === "BOND-007"
    deposit.account.owner === bank2
    return (deliveryDepositCid, paymentDepositCid, rdmpPayoutInfoCid)


  (assetCid3, paymentCid3, rdmpPI3) <- submit bank3 do
